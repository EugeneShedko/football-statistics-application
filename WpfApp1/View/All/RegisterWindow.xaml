<UserControl x:Class="WpfApp1.View.RegisterWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign ="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:ff="clr-namespace:WpfApp1.ForPasswordBox"
             xmlns:local="clr-namespace:WpfApp1.View"
             mc:Ignorable="d" 
              d:DesignHeight="780" d:DesignWidth="460">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="0.2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Viewbox Grid.Column="1" Grid.Row="0">
            <TextBlock Text="Регистрация" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="50"/>
        </Viewbox>
        <TextBox Grid.Column="1" Grid.Row="1" VerticalAlignment="Center"  materialDesign:HintAssist.Hint="Фамилия" FontSize="20"/>
        <TextBox Grid.Column="1" Grid.Row="2" VerticalAlignment="Center"  materialDesign:HintAssist.Hint="Имя" FontSize="20"/>
        <TextBox Grid.Column="1" Grid.Row="3" VerticalAlignment="Center"  materialDesign:HintAssist.Hint="Логин" FontSize="20"/>
        <PasswordBox Grid.Column="1" Grid.Row="4" VerticalAlignment="Center"  materialDesign:HintAssist.Hint="Пароль" FontSize="20"
                      x:Name="PasswordBox"
         ff:PasswordBoxAssistant.BindPassword="true"  ff:PasswordBoxAssistant.BoundPassword="{Binding Path = Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     ></PasswordBox>
        <Button  Grid.Column="1" Height="40" Grid.Row="5" Content="Зарегистрироваться" VerticalAlignment="Center" Command="{Binding ShowLoginWindow}"/>
        <Image Source="/WpfApp1;component/View/Resources/logo.png" Grid.Column="1" Grid.Row="6" Grid.RowSpan="2" Margin="0,0,0,10"/>
    </Grid>
</UserControl>

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WpfApp1.View.Resources.ResourcesDictionaries">
    <Style x:Key="Style1">
        <Setter Property="Control.Foreground" Value="Gray"/>
        <Setter Property="Control.FontSize" Value="17"/>
        <Setter Property="Control.Margin" Value="10,0,0,0"/>
    </Style>
    <Style x:Key="Style2" BasedOn="{StaticResource Style1}">
        <Setter Property="Control.Foreground" Value="OliveDrab"/>
        <Setter Property="Control.VerticalAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>
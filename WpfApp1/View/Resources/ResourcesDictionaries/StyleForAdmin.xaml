<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WpfApp1.View.Resources.ResourcesDictionaries">
    <Style TargetType="TextBox">
        <Setter Property="Control.FontSize" Value="20"/>
        <Setter Property="Control.VerticalAlignment" Value="Center"/>
        <Setter Property="Control.Margin" Value="50,0,50,0"/>
    </Style>
    <Style x:Key="ButtonStyle" BasedOn="{StaticResource TextBoxStyle}">
        <Setter Property="Control.Height" Value="35"/>
    </Style>
</ResourceDictionary>
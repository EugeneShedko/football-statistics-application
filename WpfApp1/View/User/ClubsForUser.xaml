                <DataTemplate>
                    <Border BorderBrush="OliveDrab" BorderThickness="4" Width="200" Height="200" Margin="17,0,0,0">
                        <Grid>
                            <Image Source="/WpfApp1;component/View/Resources/shahter.png"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListItem/>
            <ListItem/>
            <ListItem/>
            <ListItem/>
            <ListItem/>
            <ListItem/>
        </ListBox>
    </Grid>
    </ScrollViewer>
</UserControl>

<UserControl x:Class="WpfApp1.View.Admin.ExitForAdmin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.View.Admin"
             mc:Ignorable="d" 
            d:DesignHeight="985" d:DesignWidth="1480">
    <Grid Background="White">
        <Grid Width ="400" Height="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Вы действительно хотите выйти?" HorizontalAlignment="Center" FontSize="23"/>
            <Button Content="Да" Grid.Column="0" Grid.Row="1" Width="100" HorizontalAlignment="Right" Margin="0,0,20,0" Command="{Binding ShowLoginForAdminWindow}"/>
            <Button Content="Нет" Grid.Column="1" Grid.Row="1" Width="100" HorizontalAlignment="Left" Margin="20,0,0,0" Command="{Binding ShowMathesForAdminWindow}"/>
        </Grid>
    </Grid>
</UserControl>
